<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/content_banner"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_main"
        tools:context=".MainActivity">

    <com.devsancho.slidebanner.SlideBanner
            android:id="@+id/slide_banner"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            app:auto_cycle="true"
            app:corner_radius="40"
            app:period="2000"
            app:delay="0"
            app:defaultTransformer="vertical_flip"
            app:error_image="@drawable/error"
            app:selected_dot="@drawable/custom_selected"
            app:unselected_dot="@drawable/custom_unselected"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>